service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /questions/{id} {
    	allow create;
      allow read: if request.auth.uid == '3j3ZyeaiDbUmmf1HdJOXnna9MVe2';
      allow delete: if request.auth.uid == '3j3ZyeaiDbUmmf1HdJOXnna9MVe2';
    }

    match /answers/{id} {
    	allow read;
      allow write: if request.auth.uid == '3j3ZyeaiDbUmmf1HdJOXnna9MVe2';
    }
  }
}
